<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#093A68"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_image_view"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="@dimen/dimen_150"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_200"
        android:src="@drawable/ic_ship_captain_hat"
        app:tint="@color/colorWhite"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/splash_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20"
        android:paddingEnd="@dimen/dimen_20"
        android:text="Future of Inspection, Preparations on Merchant Ships"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18" />

</androidx.appcompat.widget.LinearLayoutCompat>