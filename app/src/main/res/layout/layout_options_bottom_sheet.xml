<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/from_file_system"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_menu_gallery"
        android:drawableLeft="@drawable/ic_menu_gallery"
        android:text="Choose from File System"
        app:drawableTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/from_camera"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_menu_camera"
        android:drawableLeft="@drawable/ic_menu_camera"
        android:text="Take image from Camera"
        app:drawableTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_file_system" />

</androidx.constraintlayout.widget.ConstraintLayout>